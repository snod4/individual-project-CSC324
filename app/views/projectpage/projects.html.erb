<h1>Projects</h1>
<div id = "container">
<ul id = "project-ul"><% @projects.each do |data|%>
  <li id = "project-list">
   <div id = "list-container">
   <h3><%="#{data.name} -- #{data.date}"%></h3>
   <p><%= data.description %></p>
   </div>
  </li>
  <% end %>
</ul>
</div>

<div class="sneaky_form">
  <div class="sneakier_form">
    <%= form_for(@project) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      <%= f.label :description %>
      <%= f.text_area(:description, size: '50x10' %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

